generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  username String @unique
  password String
  phone String ?
  firstlogin_at DateTime ?
  lastlogin_at DateTime ?
  is_active Boolean
  create_at DateTime @default(now())
  update_at DateTime ?
}
